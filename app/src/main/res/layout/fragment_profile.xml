<android:android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nested_scrollview"
    android:padding = "20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--https://developer.android.com/reference/android/support/v4/widget/NestedScrollView.html-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic_profile" />
        <!--res values에 colors와 dimens를 이용해서 글자 크기를 지정해준다.-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="이름"
                    android:textColor="@color/BasicTextColor"
                    android:textSize="@dimen/normal_edit_or_text_size" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:text="정석원"
                    android:textColor="@color/BasicTextColor"
                    android:textSize="@dimen/small_edit_or_text_size" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="나이"
                    android:textColor="@color/BasicTextColor"
                    android:textSize="@dimen/normal_edit_or_text_size" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:text="27"
                    android:textColor="@color/BasicTextColor"
                    android:textSize="@dimen/small_edit_or_text_size" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="한마디"
                    android:textColor="@color/BasicTextColor"
                    android:textSize="@dimen/normal_edit_or_text_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="열심히 스터디를 해보자!"
                    android:paddingTop="10dp"
                    android:singleLine="true"
                    android:textColor="@color/BasicTextColor"
                    android:textSize="@dimen/small_edit_or_text_size" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</android:android.support.v4.widget.NestedScrollView>